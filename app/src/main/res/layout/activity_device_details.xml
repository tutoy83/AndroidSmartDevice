<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceDetailsActivity">

    <Button
        android:id="@+id/endDeviceButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#1E7DBF"
        android:text="TERMINER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/compteurValue"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/compteurOutline"
        app:layout_constraintEnd_toEndOf="@+id/compteurOutline"
        app:layout_constraintStart_toStartOf="@+id/compteurOutline"
        app:layout_constraintTop_toTopOf="@+id/compteurOutline" />

    <TextView
        android:id="@+id/descriptionSub"
        android:layout_width="238dp"
        android:layout_height="58dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:text="Abonnez-vous pour recevoir les notifications de l'appareil "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <ImageView
        android:id="@+id/led3Icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/led2Icon"
        app:layout_constraintTop_toBottomOf="@+id/descriptionActivityDetails"
        app:srcCompat="@drawable/led_off" />

    <ImageView
        android:id="@+id/led2Icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/led1Icon"
        app:layout_constraintTop_toBottomOf="@+id/descriptionActivityDetails"
        app:srcCompat="@drawable/led_off" />

    <TextView
        android:id="@+id/descriptionActivityDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Affichage des différents LEDs :"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subTitleDeviceDetails" />

    <TextView
        android:id="@+id/subTitleDeviceDetails"
        android:layout_width="230dp"
        android:layout_height="39dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:text="connected"
        android:textAlignment="textEnd"
        android:textColor="#3EC817"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleDeviceDetails" />

    <TextView
        android:id="@+id/titleDeviceDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:text="Bienvenue sur Smart Device"
        android:textAlignment="center"
        android:textColor="#1E7DBF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/led1Icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionActivityDetails"
        app:srcCompat="@drawable/led_off" />

    <Switch
        android:id="@+id/optionNotifDeviceDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/descriptionSub"
        app:layout_constraintStart_toEndOf="@+id/descriptionSub"
        app:layout_constraintTop_toTopOf="@+id/descriptionSub" />

    <TextView
        android:id="@+id/compteurDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:text="Compteur incrémental"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionSub" />

    <ImageView
        android:id="@+id/checkMarkConnection"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/subTitleDeviceDetails"
        app:layout_constraintStart_toEndOf="@+id/subTitleDeviceDetails"
        app:layout_constraintTop_toTopOf="@+id/subTitleDeviceDetails"
        app:srcCompat="@drawable/check_mark" />

    <View
        android:id="@+id/divider"
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/led2Icon" />

    <ProgressBar
        android:id="@+id/compteurOutline"
        style="?android:attr/progressBarStyle"
        android:layout_width="105dp"
        android:layout_height="96dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="#1E7DBE"
        android:indeterminate="true"
        android:progressBackgroundTint="#1E7DBE"
        app:layout_constraintBottom_toBottomOf="@+id/compteurDescription"
        app:layout_constraintStart_toEndOf="@+id/compteurDescription"
        app:layout_constraintTop_toTopOf="@+id/compteurDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>